{
  "gemini_model": "models/gemini-2.5-pro",
  "api_call_delay_seconds": 3,
  "max_function_threads": 6,
  "target_directories": ["APIs/"],
  "exclude_patterns": ["**/tests/**", "**/SimulationEngine/**"],
  "checks": [
    {
      "name": "Docstring Quality",
      "enabled": true,
      "target_type": "function",
      "prompt_template_file": "prompts/docstring_quality.txt",
      "output_key": "docstring_quality"
    },
    {
      "name": "Pydantic Usage",
      "enabled": true,
      "target_type": "function",
      "prompt_template_file": "prompts/pydantic_usage.txt",
      "output_key": "pydantic_usage"
    },
    {
      "name": "Input Parameter Validation",
      "enabled": true,
      "target_type": "function",
      "prompt_template_file": "prompts/input_validation.txt",
      "output_key": "input_validation"
    },
    {
      "name": "Function Parameters & Type Annotations",
      "enabled": true,
      "target_type": "function",
      "prompt_template_file": "prompts/function_parameters.txt",
      "output_key": "function_parameters"
    },
    {
      "name": "Implementation Completeness",
      "enabled": true,
      "target_type": "function",
      "prompt_template_file": "prompts/implementation_status.txt",
      "output_key": "implementation_status"
    },
    {
      "name": "Project Structure",
      "enabled": true,
      "target_type": "project",
      "prompt_template_file": "prompts/project_structure.txt",
      "output_key": "project_structure"
    },
    {
      "name": "Input Normalization",
      "enabled": true,
      "target_type": "function",
      "prompt_template_file": "prompts/input_normalization.txt",
      "output_key": "input_normalization"
    },
    {
      "name": "Docstring vs. Schema",
      "enabled": true,
      "target_type": "function",
      "prompt_template_file": "prompts/docstring_schema_comparison.txt",
      "output_key": "docstring_v_schema"
    }
  ]
}